/* component/bookList/bookList.wxss */
.scroll_class {
  background-color: #FFFFFF;
}
.book_item {
  height: 200rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.cover_image {
  width: 140rpx;
  height: 160rpx;
  margin-left: 30rpx;
  /* box-shadow: 0 0 10rpx #e5e5e5;
  border-radius: 10rpx; */
}

.book_itemRightView {
  margin-left: 20rpx;
  width: 530rpx;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.book_itemRightView .title_label {
  color: #38312B;
  font-size: 30rpx;
}
.book_itemRightView .book_author {
  color: #FF5E45;
  font-size: 26rpx;
  white-space: nowrap;
}
.book_itemRightView .book_shortIntro {
  color: #A39D96;
  font-size: 24rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
}

.loading {
  width:100%;
  display: flex;
  justify-content: space-around;
}