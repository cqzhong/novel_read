/* pages/bookDetail/bookDetail.wxss */

.detail_header {
  width: 100%;
  /* padding: 0 10rpx; */
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.header_left {
  width: 25%;
}
.header_right {
  width: 65%;
  display: flex;
  flex-direction: column;
}
.header_right .header_title {
  color: #38312B;
  font-size: 36rpx;
}
.author_class {
  color: #A39D96;
  font-size: 28rpx;
}

.detail_introduce {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.detail_introduce .introduce_sub {
  display: flex;
  flex-direction: column;
  width: 20%;
  text-align: center;
  color: #A39D96;
  font-size: 28rpx;
}

.detail_longIntro {
  width: 100%;
  display: flex;
  flex-direction: column;
  bottom: 100rpx;
}
.detail_longIntro .longIntro_title {
  color: #38312B;
  font-size: 36rpx;
  padding: 4rpx 20rpx;
}
.detail_longIntro .longIntro_content {
  padding: 4rpx 40rpx;
  color: #A39D96;
  font-size: 28rpx;
}
.detail_footer {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  z-index: 10;
  width: 100%;
  height: 100rpx;
  box-shadow:0 0 8rpx 0 rgba(43, 39, 36, 0.15);
}
.detail_footer .button {
  width: 50%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}

.detail_footer .button:last-of-type {
  color: #fff;
  background-color: #FF5E45;
}