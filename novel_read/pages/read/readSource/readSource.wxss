/* pages/read/readSource/readSource.wxss */

.item_bottom {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  width: 100%;
  height: 100rpx;
}
.item_left {
  color: white;
  background-color: rgb(98, 98, 98);
  border-radius: 25rpx;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  margin-left: 30rpx;
  margin-top: 25rpx;
  font-size: 22rpx;
}

.item_center {
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  width: 500rpx;
  height: 100%;
}
.item_center_top .top_link {
  color: #323232;
  font-size: 26rpx;
}
.item_center_top .top_time {
  margin-left: 20rpx;
  color: #8c8c8c;
  font-size: 20rpx;
}
.item_center_bottom {
  color: #8c8c8c;
  font-size: 24rpx;
}

.item_right {
  color: #8c8c8c;
  font-size: 20rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  margin-right: 30rpx;
}
