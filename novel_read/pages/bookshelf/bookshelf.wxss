/* pages/bookshelf/bookshelf.wxss */
@import "../../template/noBookTip/noBookTip.wxss";
page {
  height: 100%;
  background-color:#fff;
}
.shelf_bottom {
  height: 100%;
}
.book_bottom {
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  position: relative;
}
.book_item {
  background-color: white;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  position: relative;
  z-index: 10;
}
.remove{  
  width: 160rpx;  
  height: 100%;  
  background-color: red; 
  color: white; 
  position: absolute;  
  top: 0; 
  right:0;  
  display: flex;  
  justify-content: center;  
  align-items: center;  
  z-index: -1;
}
.cover_image {
  width: 140rpx;
  height: 160rpx;
  margin-left: 30rpx;
  /* background-color: #E5E5E5; */
  /* box-shadow: 0 0 10rpx #e5e5e5;
  border-radius: 10rpx; */
}

.book_itemRightView {
  margin-left: 20rpx;
  width: 530rpx;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.book_itemRightView .title_label {
  color: #38312B;
  font-size: 30rpx;
}
.book_itemRightView .book_author {
  color: rgb(187, 113, 101);
  font-size: 26rpx;
  white-space: nowrap;
  margin-top: 20rpx;
}

.book_item:after {
  content: " ";
  position: absolute;
  left: 30rpx;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1px solid #E5E5E5;
  color: #E5E5E5;
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}


